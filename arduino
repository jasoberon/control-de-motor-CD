/*
Sistema de control para el mecanismo
de un limpiador de ventanas. Control de giro
mediante el L293D
*/

int up = 7;
int down = 8;
int in1A = 2;
int in2A = 3;
int bomba = 12; 
int start = 10;
int eststart=0;
int estup=0;
int estdown=0;
int sequence = 0;

void setup() {
  pinMode(11,OUTPUT);
  pinMode(in1A, OUTPUT);
  pinMode(in2A,OUTPUT);
  pinMode(bomba,OUTPUT);  
  pinMode(in2A,OUTPUT);
  pinMode(up, INPUT);
  pinMode(down,INPUT); 
  pinMode(start,INPUT);
  digitalWrite(11, LOW);

}

void loop() {

int eststart = digitalRead(start);
int estup = digitalRead(up);  
int estdown = digitalRead(down);  
  
switch (sequence)
{
  case 0:
  //sin no se presiona start
  if (eststart == LOW && estup == HIGH && estdown == LOW)
  {
    sequence = 0;
  }
  else
  {
    sequence = 1;
  }
  digitalWrite(in1A, LOW);
  digitalWrite(in2A, LOW);
  digitalWrite(11, LOW);
  
  break;
  
  case 1:
  //se presiona start
  digitalWrite(in1A, HIGH);
  digitalWrite(in2A, LOW);
  digitalWrite(11, HIGH);
  digitalWrite(bomba, HIGH);
  
  if (estup == LOW && estdown == HIGH)
  {
    sequence = 2;
  }
  else
  {
    sequence = 1;
  }
  
  break;  
  
  case 2:
  //llega abajo
  digitalWrite(in1A, LOW);
  digitalWrite(in2A, HIGH);
  digitalWrite(11, HIGH);
  digitalWrite(bomba, LOW);  
  
  if (estup == HIGH && estdown == LOW)
  {
    sequence = 0;
  }
  
  break; 
  
}
  
}


